<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


      <!-- Include the app_bar.xml -->
    <include layout="@layout/app_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="Australian Footbal League"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />


        <Button
            android:id="@+id/btn_create"
            android:layout_width="268dp"
            android:layout_height="51dp"
            android:layout_marginStart="65dp"
            android:backgroundTint="@color/white"
            android:text="Create Match"
            android:textColor="@color/bluedark"
            app:layout_constraintBottom_toTopOf="@+id/btn_record"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/btn_record"
            android:layout_width="268dp"
            android:layout_height="51dp"
            android:layout_marginStart="65dp"
            android:backgroundTint="@color/white"
            android:text="Record Match"
            android:textColor="@color/bluedark"
            app:layout_constraintBottom_toTopOf="@+id/btn_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_create" />

        <Button
            android:id="@+id/btn_history"
            android:layout_width="268dp"
            android:layout_height="51dp"
            android:layout_marginStart="65dp"
            android:backgroundTint="@color/white"
            android:text="Match History"
            android:textColor="@color/bluedark"
            app:layout_constraintBottom_toTopOf="@+id/btn_teamrank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_record" />

        <Button
            android:id="@+id/btn_teamrank"
            android:layout_width="268dp"
            android:layout_height="51dp"
            android:layout_marginStart="65dp"
            android:backgroundTint="@color/white"
            android:text="Team Rank"
            android:textColor="@color/bluedark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_history" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="189dp"
            android:layout_height="199dp"
            android:layout_marginStart="111dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_create"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/afl_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>